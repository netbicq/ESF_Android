<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rad10_bor_d2d2d2"
            android:gravity="center"
            tools:text="3"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iv_complete"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic31" />

        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#d2d2d2" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pointName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            tools:text="语文"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_postName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            tools:text="岗位:教师"
            android:textColor="#000000"
            android:textSize="12sp" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center|start">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_complete"
                android:layout_width="40dp"
                android:visibility="invisible"
                android:layout_height="20dp"
                android:text="完成"
                app:qmui_radius="4dp"
                app:qmui_backgroundColor="@color/theme"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_stop"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                app:qmui_radius="4dp"
                app:qmui_backgroundColor="@color/theme"
                android:text="作业终止"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/btn_back"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_marginLeft="10dp"
                app:qmui_radius="4dp"
                app:qmui_backgroundColor="@color/theme"
                android:text="作业回退"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <View
            android:id="@+id/line2"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#dddddd" />
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/indicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:qmui_corner_radius="10dp"
            app:qmui_border_color="#dddddd"
            android:src="#dddddd"
            />
        <View
            android:visibility="gone"
            android:id="@+id/line3"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#dddddd" />

    </LinearLayout>
    <!--#FFA500-->
</LinearLayout>
