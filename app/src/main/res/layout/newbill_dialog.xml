<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:qmui_radius="8dp"
    app:qmui_backgroundColor="#ffffff"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center|start"
        android:padding="15dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开   始   时   间:"/>

        <EditText
            android:id="@+id/ed_startt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rad4_bor_d2d2d2"
            android:gravity="center|start"
            android:layout_marginLeft="5dp"
            android:hint="请输入开始时间"
            android:padding="5dp"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center|start"
        android:padding="15dp"

        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计完成时间:"/>

        <EditText
            android:id="@+id/ed_endt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rad4_bor_d2d2d2"
            android:gravity="center|start"
            android:hint="请输入预计完成时间"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="15dp"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/isJump"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="跳转到单据"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_sub"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:qmui_radius="4dp"
            app:qmui_backgroundColor="@color/theme"
            android:text="提交"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>
